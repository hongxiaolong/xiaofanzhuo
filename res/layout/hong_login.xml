<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#33CCFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/register_linerlayout_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#33CCFF" >

        <Button
            android:id="@+id/register_button_back"
            android:layout_width="33dp"
            android:layout_height="38dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/hong_register_button_back_w" />

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#33CCFF"
            android:gravity="center"
            android:text="用户登录"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20dip" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageview_xiaofanzhuo_picture"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:src="@drawable/hong_logo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1" >

        <EditText
            android:id="@+id/edittext_user"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:background="#FFFFFF"
            android:hint="手机号码" />

        <EditText
            android:id="@+id/edittext_secretcode"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_below="@id/edittext_user"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:background="#FFFFFF"
            android:hint="密码"
            android:password="true"
            android:scrollHorizontally="true" />

        <LinearLayout
            android:id="@+id/auto_checkbox"
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edittext_secretcode"
            android:layout_below="@id/edittext_secretcode"
            android:layout_marginTop="5dp" >

            <CheckBox
                android:id="@+id/checkbox_secretcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#33CCFF"
                android:text="记住密码"
                android:textColor="#FFFFFF" />

            <CheckBox
                android:id="@+id/checkbox_autologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#33CCFF"
                android:text="自动登录"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_width="250dip"
            android:layout_height="40dip"
            android:layout_below="@id/auto_checkbox"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="#77DDFF"
            android:gravity="center"
            android:text="登录"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="250dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_regeist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:text="注册账号"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/button_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_toRightOf="@id/button_regeist"
                android:layout_weight="1"
                android:text="忘记密码"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>